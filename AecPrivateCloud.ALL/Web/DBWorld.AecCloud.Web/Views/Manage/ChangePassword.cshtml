@using Microsoft.AspNet.Identity
@model  ChangePasswordViewModel
@{
    ViewBag.Title = "修改密码";
}
<link href="~/Content/oldstyles/cscec82.css" rel="stylesheet" type="text/css" />
<style>
    
    .body-container {
        background-color: white;
    }

     #content {
         background-color: #ececec;
         max-height: inherit !important;
     }

    .secondContent {
        background-color: white;
        margin-top:10px;
        padding-left:0;
        padding-top:50px;
        height:1000px;
    }

    .form-control-pass {
        width: 534px;
        height: 50px;
        margin-top:18px;
        margin-bottom:18px;
        margin-left:235px;
        border-color:#dcdcdc;
        background-color:#ececec;
        -ms-border-radius: 8px;
        border-radius: 8px;
        font-size:20px;
    }
    .btn-save {
        padding: 0px 10px 0px 10px;
        -ms-border-radius: 8px;
        border-radius: 8px;
        color: orange;
        border: 1px solid silver;
        width: 484px;
        height: 30px;
        background-color: #1a83cb;
        color: white;
    }

    

    .confirm-pass input{
        margin-bottom:5px;
        font-size:20px;
        padding-left:5px;
        
    }
    .btn-save {
        margin-top:20px;
        margin-left: 235px;
        height:50px;
        width:534px;
        font-size:20px;
    }
</style>
<!-- 主要内容部分 -->
<div id="content" class="clearfix">
    <!-- 左边导航 -->
    @*@Html.Partial("_LeftNavPrivatePartiale")*@
    @Html.Partial("_LeftNavBIM")
    <!-- 右边内容 -->
    <section class="right">
        <div class="section-header">我的账户 > 修改密码</div>
        <div class="secondContent">
            <p class="text-success" style="color: lime; font-size: 1.5em;">@ViewBag.StatusMessage</p>
            @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                @*<div style="background-color: #f0f1f3;width: 400px;padding-top: 30px;padding-bottom: 30px;margin-left: 80px;border-radius:30px/10px;">*@
                <p> </p>
                <div class="form-group" style="margin-top: 20px;">
                    @*@Html.LabelFor(m => m.OldPassword, new { @class = "col-md-2 control-label" })*@

                    @Html.PasswordFor(m => m.OldPassword, new {@class = "form-control-pass", @autofocus = "autofocus", placeholder = "原始密码"})

                </div>
                <div class="form-group">
                    @*@Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 control-label" })*@
                    <div>
                        @Html.PasswordFor(m => m.NewPassword, new {@class = "form-control-pass", placeholder = "新密码"})
                    </div>
                </div>
                <div class="form-group" style="margin-bottom: 0;">
                    @*@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })*@
                    <div class="confirm-pass">
                        @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control-pass", placeholder = "确认密码"})
                    </div>
                </div>
                <p style="color: #4bb7e6; margin-left: 200px">注：密码长度至少6位，由数字、字母、字符组成</p>
                <div class="form-group">
                    <div>
                        <input type="submit" value="确认" class="btn btn-save"/>
                    </div>
                </div>
    @*</div>*@
            }
        </div>

    </section>
</div>

