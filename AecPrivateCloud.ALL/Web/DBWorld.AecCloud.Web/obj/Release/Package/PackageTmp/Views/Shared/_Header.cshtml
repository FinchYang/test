
@{
    var userName = User.Identity.GetUserName();
    var homeHost = DBWorld.AecCloud.Web.AuthUtility.GetHomeHost().TrimEnd('/');
    var loginUri = DBWorld.AecCloud.Web.AuthUtility.GetSSOLoginUri();
    var registerUri = DBWorld.AecCloud.Web.AuthUtility.GetSSORegisterUri();
    var tplHost = DBWorld.AecCloud.Web.AuthUtility.GetTemplateHost();
    var knowledgeHost = DBWorld.AecCloud.Web.AuthUtility.GetKnowledgeHost();
