                    {
                        <div class="loginFor">
                            <a href="@(loginUri)?returnurl=@(Server.UrlEncode(Request.Url.AbsoluteUri))" title="登录">登录</a>
                            <a href="@(registerUri)?returnurl=@(Server.UrlEncode(Request.Url.AbsoluteUri))" title="注册">注册</a>
